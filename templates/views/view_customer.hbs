<!DOCTYPE html>

<html>

<head>
    <title>View Customers</title>
    <link rel="icon" href="/img/bank.png">
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <div class="main_content">
        <h1>Customers</h1>
        {{>header}}
        <br>
        
        <table id="customer_table">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>E-Mail</th>
                <th>Balance</th>
                <th>Details</th>
            </tr>
            {{#each data}}
                {{#with this}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{name}}</td>
                        <td>{{email}}</td>
                        <td>{{balance}}</td>
                        <td><a href="/customer_detail/{{_id}}"><button>Details</button></a></td>
                    </tr>
                {{/with}}
            {{/each}}
        </table>
    </div>
    

    {{>footer}}
</body>

</html>